{
	"compilerOptions": {
		"target": "ESNext",
        "module": "ESNext",
		"outDir": "./build",
        "rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
	},
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}